{
  "name": "fall-ball",
  "version": "1.0.0",
  "repository": "https://github.com/xDellTog/fall-ball.git",
  "author": "Daniel Tognon <37959139+xDellTog@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "copy-files": "cp -R ./public/ ./dist/",
    "build": "yarn clean && yarn copy-files && yarn es:build",
    "watch": "yarn clean && yarn copy-files && yarn es:watch",
    "start": "yarn build && live-server ./dist",
    "start:dev": "concurrently \"yarn watch\" \"live-server ./dist\"",
    "es:build": "esbuild ./src/index.ts --outfile=./dist/index.js --bundle",
    "es:watch": "esbuild ./src/index.ts --outfile=./dist/index.js --bundle --watch"
  },
  "dependencies": {
    "bootstrap": "^5.2.1",
    "matter-js": "^0.18.0"
  },
  "devDependencies": {
    "@types/matter-js": "^0.18.1",
    "concurrently": "^7.3.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.15.7",
    "rimraf": "^3.0.2"
  }
}
